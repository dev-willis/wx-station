{
	"name": "npm-build-ravenflight",
	"version": "1.5.0",
	"description": "A set of web dev tasks.",
	"author": "David Willis <david@ravenflight.media>",
	"type": "module",
	"config": {
		"assets": "www/assets"
	},
	"scripts": {
		"build": "rollup -c && node deploy.cjs \"/dist/js\" \"%npm_package_config_assets%/js\"",
		"watch": "rollup -c -w",
		"lint": "eslint src/js --fix",
		"imgmin": "imagemin src/images --out-dir dist/img --plugin.webp.quality=95",
		"scss": "sass --style=compressed src/scss:dist/css",
		"prefix": "postcss -u autoprefixer -r dist/css/*.css",
		"terse": "terser src/js/main.js --source-map --output dist/js/js.js",
		"deploy:css": "npm run scss && node deploy.cjs \"/dist/css\" \"%npm_package_config_assets%/css\"",
		"deploy:js": "npm run terse && node deploy.cjs \"/dist/js\" \"%npm_package_config_assets%/js\"",
		"deploy:all": "npm run terse && npm run scss && npm run prefix && node deploy.cjs \"/dist\" \"%npm_package_config_assets%\"",
		"watch:css": "onchange -k \"src/scss/*.scss\" -- npm run deploy:css",
		"watch:js": "onchange -k \"src/js/*.js\" -- npm run build",
		"watch:all": "concurrently \"npm run watch:css\" \"npm run watch:js\""
	},
	"dependencies": {
		"chart.js": "^3.6.2",
		"chartjs-adapter-date-fns": "^2.0.0",
		"date-fns": "^2.27.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.1.0",
		"@samkirkland/ftp-deploy": "^1.1.1",
		"eslint": "^8.5.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.36.2",
		"rollup-plugin-terser": "^7.0.2",
		"timekeeper": "^2.2.0"
	}
}
